{
  "name": "BusinessPartnerValidation",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "license": "ISC",
  "dependencies": {
    "@sap-cloud-sdk/core": "1.44.0",
    "@sap/audit-logging": "5.0.0",
    "@sap/cds": "5.4.5",
    "@sap/cloud-sdk-vdm-business-partner-service": "1.25.0",
    "@sap/hana-client": "^2.8.20",
    "@sap/xb-msg-amqp-v100": "0.9.51",
    "@sap/xsenv": "3.1.0",
    "@sap/xssec": "3.2.0",
    "express": "^4",
    "grunt": "^1.1.0",
    "passport": "^0.4.1",
    "postcode-validator": "^3.1.0"
  },
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start": "npx cds run",
    "test": "mocha tests/chai-test.js --timeout 15000 --exit"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2",
    "jest": "*",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^9.0.0"
  },
  "cds": {
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "messaging": {
        "kind": "local-messaging",
        "[production]": {
          "kind": "enterprise-messaging-shared"
        }
      },
      "[production]": {
        "db": {
          "kind": "hana",
          "model": [
            "db",
            "srv"
          ]
        }
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "[production]": {
          "credentials": {
            "destination": "bupa",
            "requestTimeout": 18000000
          }
        }
      },
      "uaa": {
        "kind": "xsuaa"
      }
    }
  }
}
